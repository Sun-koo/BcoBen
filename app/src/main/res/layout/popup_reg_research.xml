<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="33dp"
        android:paddingBottom="33dp">
        
        <LinearLayout
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="9dp"
            android:orientation="vertical"
            android:background="@drawable/background_gray_popup">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="11dp"
                android:paddingBottom="8dp"
                android:paddingStart="14dp"
                android:paddingEnd="14dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_input_tab"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_drawing_input_tab"
                        android:onClick="onClick"
                        android:paddingTop="9dp"
                        android:paddingBottom="9dp"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp"
                        android:text="@string/popup_reg_research_input"
                        android:textColor="@color/text_drawing_input_tab"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/txt_picture_tab"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_drawing_input_tab"
                        android:onClick="onClick"
                        android:paddingTop="9dp"
                        android:paddingBottom="9dp"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp"
                        android:text="@string/popup_reg_research_picture"
                        android:textColor="@color/text_drawing_input_tab"
                        android:textSize="14dp"/>

                    <TextView
                        android:id="@+id/txt_recode_tab"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_drawing_input_tab"
                        android:onClick="onClick"
                        android:paddingTop="9dp"
                        android:paddingBottom="9dp"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp"
                        android:text="@string/popup_reg_research_recode"
                        android:textColor="@color/text_drawing_input_tab"
                        android:textSize="14dp"/>

                    <TextView
                        android:id="@+id/txt_memo_tab"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_drawing_input_tab"
                        android:onClick="onClick"
                        android:paddingTop="9dp"
                        android:paddingBottom="9dp"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp"
                        android:text="@string/popup_reg_research_memo"
                        android:textColor="@color/text_drawing_input_tab"
                        android:textSize="14dp"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/btn_popup_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:text="X 닫기"
                    android:textColor="@color/colorBlack"
                    android:textSize="16dp"
                    android:onClick="onClick"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:background="@color/colorDividerPopup"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="15dp"
                android:orientation="vertical">
                
                <ScrollView
                    android:id="@+id/layout_input_picture"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:fillViewport="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/layout_input"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:id="@+id/layout_sub_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="6dp"
                                android:onClick="onClick"
                                android:background="@drawable/background_white_popup_menu">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="12dp"
                                    android:layout_marginBottom="12dp"
                                    android:layout_marginStart="22dp"
                                    android:text="@string/popup_reg_research_input_sub_title"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="13dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_marginTop="12dp"
                                    android:layout_marginBottom="12dp"
                                    android:layout_marginEnd="41dp"
                                    android:text="@string/popup_reg_research_input_hint1"
                                    android:textColor="@color/colorTextHintPopupMenu"
                                    android:textSize="13dp"/>

                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/layout_direction"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="6dp"
                                android:onClick="onClick"
                                android:background="@drawable/background_white_popup_menu">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="12dp"
                                    android:layout_marginBottom="12dp"
                                    android:layout_marginStart="22dp"
                                    android:text="@string/popup_reg_research_input_direction"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="13dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_marginTop="12dp"
                                    android:layout_marginBottom="12dp"
                                    android:layout_marginEnd="41dp"
                                    android:text="@string/popup_reg_research_input_hint1"
                                    android:textColor="@color/colorTextHintPopupMenu"
                                    android:textSize="13dp"/>

                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/layout_defect_content"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="6dp"
                                android:onClick="onClick"
                                android:background="@drawable/background_white_popup_menu">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="12dp"
                                    android:layout_marginBottom="12dp"
                                    android:layout_marginStart="22dp"
                                    android:text="@string/popup_reg_research_input_defect_content"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="13dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_marginTop="12dp"
                                    android:layout_marginBottom="12dp"
                                    android:layout_marginEnd="41dp"
                                    android:text="@string/popup_reg_research_input_hint1"
                                    android:textColor="@color/colorTextHintPopupMenu"
                                    android:textSize="13dp"/>

                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/layout_architecture"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="6dp"
                                android:onClick="onClick"
                                android:background="@drawable/background_white_popup_menu">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="12dp"
                                    android:layout_marginBottom="12dp"
                                    android:layout_marginStart="22dp"
                                    android:text="@string/popup_reg_research_input_architecture"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="13dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_marginTop="12dp"
                                    android:layout_marginBottom="12dp"
                                    android:layout_marginEnd="41dp"
                                    android:text="@string/popup_reg_research_input_hint1"
                                    android:textColor="@color/colorTextHintPopupMenu"
                                    android:textSize="13dp"/>

                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/layout_length"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="6dp"
                                android:background="@drawable/background_white_popup_menu">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="12dp"
                                    android:layout_marginBottom="12dp"
                                    android:layout_marginStart="22dp"
                                    android:text="@string/popup_reg_research_input_length"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="13dp"/>

                                <EditText
                                    android:id="@+id/edit_length"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="132dp"
                                    android:layout_marginEnd="41dp"
                                    android:background="@null"
                                    android:inputType="number"
                                    android:maxLines="1"
                                    android:hint="@string/popup_reg_research_input_hint2"
                                    android:textColorHint="@color/colorTextHintPopupMenu"
                                    android:textSize="13dp"
                                    android:textAlignment="viewEnd"/>

                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/layout_width"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="6dp"
                                android:background="@drawable/background_white_popup_menu">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="12dp"
                                    android:layout_marginBottom="12dp"
                                    android:layout_marginStart="22dp"
                                    android:text="@string/popup_reg_research_input_width"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="13dp"/>

                                <EditText
                                    android:id="@+id/edit_width"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="132dp"
                                    android:layout_marginEnd="41dp"
                                    android:background="@null"
                                    android:inputType="number"
                                    android:maxLines="1"
                                    android:hint="@string/popup_reg_research_input_hint2"
                                    android:textColorHint="@color/colorTextHintPopupMenu"
                                    android:textSize="13dp"
                                    android:textAlignment="viewEnd"/>

                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/layout_height"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="6dp"
                                android:background="@drawable/background_white_popup_menu">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="12dp"
                                    android:layout_marginBottom="12dp"
                                    android:layout_marginStart="22dp"
                                    android:text="@string/popup_reg_research_input_height"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="13dp"/>

                                <EditText
                                    android:id="@+id/edit_height"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="132dp"
                                    android:layout_marginEnd="41dp"
                                    android:background="@null"
                                    android:inputType="number"
                                    android:maxLines="1"
                                    android:hint="@string/popup_reg_research_input_hint2"
                                    android:textColorHint="@color/colorTextHintPopupMenu"
                                    android:textSize="13dp"
                                    android:textAlignment="viewEnd"/>

                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/layout_count"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="6dp"
                                android:background="@drawable/background_white_popup_menu">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="12dp"
                                    android:layout_marginBottom="12dp"
                                    android:layout_marginStart="22dp"
                                    android:text="@string/popup_reg_research_input_count"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="13dp"/>

                                <EditText
                                    android:id="@+id/edit_count"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="132dp"
                                    android:layout_marginEnd="41dp"
                                    android:background="@null"
                                    android:inputType="number"
                                    android:maxLines="1"
                                    android:hint="@string/popup_reg_research_input_hint2"
                                    android:textColorHint="@color/colorTextHintPopupMenu"
                                    android:textSize="13dp"
                                    android:textAlignment="viewEnd"/>

                            </RelativeLayout>

                        </LinearLayout>

                        <RelativeLayout
                            android:id="@+id/layout_picture"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="29dp"
                            android:background="@drawable/background_keycolor_popup_menu">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:layout_marginBottom="12dp"
                                android:layout_marginStart="22dp"
                                android:text="@string/popup_reg_research_picture"
                                android:textColor="@color/colorWhite"
                                android:textSize="13dp"/>

                            <TextView
                                android:id="@+id/txt_picture"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_marginTop="12dp"
                                android:layout_marginBottom="12dp"
                                android:layout_marginEnd="41dp"
                                android:text="@string/popup_reg_research_picture_hint"
                                android:textColor="@color/colorWhite"
                                android:textSize="13dp"/>

                        </RelativeLayout>

                        <LinearLayout
                            android:id="@+id/layout_picture_list"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/popup_reg_research_picture_count_title"/>

                                <TextView
                                    android:id="@+id/txt_picture_count"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="(0건)"/>

                            </LinearLayout>

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/recycler_picture"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>

                    </LinearLayout>
                    
                </ScrollView>

                <LinearLayout
                    android:id="@+id/layout_recode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <include
                        android:id="@+id/recode_view"
                        layout="@layout/popup_reg_research_recode"
                        android:layout_width="match_parent"
                        android:layout_height="306dp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_memo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <include
                        android:id="@+id/memo_view"
                        layout="@layout/popup_reg_research_memo"
                        android:layout_width="match_parent"
                        android:layout_height="390dp"/>

                </LinearLayout>

                <Button
                    android:id="@+id/btn_reg"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_marginTop="15dp"
                    android:onClick="onClick"
                    android:text="@string/popup_reg_research_reg"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="16dp"
                    android:background="@drawable/btn_round_pink"/>

            </LinearLayout>

        </LinearLayout>
        
    </RelativeLayout>
</layout>