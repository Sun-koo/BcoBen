<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/layout_research_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_research_data_list"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="25dp"
            android:paddingTop="15dp"
            android:paddingEnd="22dp"
            android:paddingBottom="25dp">

            <TextView
                android:id="@+id/txt_research_architecture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="건축, RC조"
                android:textColor="@color/colorTextLabel"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/txt_research_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="비파괴, 장비조사 | 지반(BH), BH-1"
                android:textColor="@color/colorTextPrimary"
                android:textSize="20dp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="23dp">

                <TextView
                    android:id="@+id/txt_research_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2020.04.21 14:52:10"
                    android:textColor="@color/colorTextLabel"
                    android:textSize="14dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="도면보기 >"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="13dp" />
            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:background="@color/colorDividerMainItem" />

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="30dp">

            <TextView
                android:id="@+id/txt_research_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="60%"
                android:textColor="@color/colorTextPrimary"
                android:textSize="32dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_research_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="12/20개소"
                android:textColor="@color/colorTextPrimary"
                android:textSize="13dp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>