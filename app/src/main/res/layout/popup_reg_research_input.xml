<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_material"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="6dp"
            android:onClick="onInputPopupContentClick"
            android:background="@drawable/bg_drawing_input_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="22dp"
                android:text="@string/popup_reg_research_input_sub_title"
                android:textColor="@color/colorBlack"
                android:textSize="13dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/txt_material"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="150dp"
                android:layout_marginEnd="33dp"
                android:maxLines="1"
                android:hint="@string/popup_reg_research_input_hint1"
                android:textAlignment="textEnd"
                android:textColor="@color/colorTextHintPopupMenu"
                android:textColorHint="@color/colorTextHintPopupMenu"
                android:textSize="13dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <EditText
                android:id="@+id/edit_material"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="150dp"
                android:layout_marginEnd="33dp"
                android:background="@null"
                android:inputType="text"
                android:maxLines="1"
                android:hint="@string/popup_reg_research_input_hint2"
                android:textAlignment="textEnd"
                android:textColor="@color/colorTextHintPopupMenu"
                android:textColorHint="@color/colorTextHintPopupMenu"
                android:textSize="13dp"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/spn_material"
                android:layout_width="130dp"
                android:layout_height="35dp"
                android:background="@null"
                android:dropDownVerticalOffset="35dp"
                android:popupBackground="@drawable/bg_research_data_list"
                android:spinnerMode="dropdown"
                android:theme="@style/ResearchSpinnerTheme"
                android:visibility="invisible"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

