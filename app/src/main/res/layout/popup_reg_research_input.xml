                android:hint="@string/popup_reg_research_input_hint1"
                android:textAlignment="textEnd"
                android:textColor="@color/colorTextHintPopupMenu"
                android:textColorHint="@color/colorTextHintPopupMenu"
                android:textSize="13dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <EditText
