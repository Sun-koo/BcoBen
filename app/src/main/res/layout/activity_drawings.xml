<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".activity.DrawingsActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:background="@color/colorPrimaryDark">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_alignParentStart="true">

                <ImageButton
                    android:id="@+id/btn_home"
                    android:layout_width="25dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="20dp"
                    android:background="@null"
                    android:src="@drawable/ic_project_home"
                    android:onClick="onClick"/>

                <RelativeLayout
                    android:layout_width="90dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="67dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:background="@drawable/spinner_box">

                    <Spinner
                        android:id="@+id/sp_category"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:spinnerMode="dropdown"
                        android:background="@null" />

                    <ImageView
                        android:id="@+id/iv_arrow_category"
                        android:layout_width="7dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/ic_spinner_off"/>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_toStartOf="@id/iv_arrow_category"
                        android:background="@color/colorBorderPink"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="90dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="14dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:background="@drawable/spinner_box">

                    <Spinner
                        android:id="@+id/sp_architecture"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:spinnerMode="dropdown"
                        android:background="@null" />

                    <ImageView
                        android:id="@+id/iv_arrow_architecture"
                        android:layout_width="7dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/ic_spinner_off"/>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_toStartOf="@id/iv_arrow_architecture"
                        android:background="@color/colorBorderPink"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="260dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="14dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:background="@drawable/spinner_box">

                    <Spinner
                        android:id="@+id/sp_research"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:spinnerMode="dropdown"
                        android:background="@null" />

                    <ImageView
                        android:id="@+id/iv_arrow_research"
                        android:layout_width="7dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/ic_spinner_off"/>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_toStartOf="@id/iv_arrow_research"
                        android:background="@color/colorBorderPink"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="145dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="14dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:background="@drawable/spinner_box">

                    <Spinner
                        android:id="@+id/sp_facility"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:spinnerMode="dropdown"
                        android:background="@null" />

                    <ImageView
                        android:id="@+id/iv_arrow_facility"
                        android:layout_width="7dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/ic_spinner_off"/>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_toStartOf="@id/iv_arrow_facility"
                        android:background="@color/colorBorderPink"/>
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_alignParentEnd="true">

                <TextView
                    android:id="@+id/btn_save"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/save"
                    android:textColor="@color/colorBackgroundNavy"
                    android:textSize="14dp"
                    android:onClick="onClick"/>

                <TextView
                    android:id="@+id/btn_close"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/close"
                    android:textColor="@color/colorBackgroundNavy"
                    android:textSize="14dp"
                    android:onClick="onClick"/>

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@color/colorPrimaryDark">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/iv_drawings"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="13dp"
                    android:adjustViewBounds="true"
                    android:scaleType="matrix"
                    android:src="@drawable/drawings_detail" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="68dp"
                    android:layout_marginEnd="23dp"
                    android:orientation="vertical"
                    android:background="@drawable/border_round_gray_box">

                    <Button
                        android:id="@+id/btn_zoom_in"
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:layout_margin="4dp"
                        android:onClick="onClick"
                        android:background="@drawable/btn_zoom_in"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorBorderLightGray"/>

                    <Button
                        android:id="@+id/btn_zoom_out"
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:layout_margin="4dp"
                        android:onClick="onClick"
                        android:background="@drawable/btn_zoom_out"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="17dp"
                    android:layout_marginEnd="23dp"
                    android:paddingTop="13dp"
                    android:paddingBottom="13dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:background="@drawable/border_round_gray_box">

                    <RelativeLayout
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:background="@drawable/circle_gray"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="18dp"
                        android:text="@string/drawings_memo"
                        android:textColor="@color/colorBlack"
                        android:textSize="14dp"/>

                    <RelativeLayout
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:background="@drawable/circle_red"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="18dp"
                        android:text="@string/drawings_recode"
                        android:textColor="@color/colorCircleRed"
                        android:textSize="14dp"/>

                    <RelativeLayout
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:background="@drawable/circle_blue"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="18dp"
                        android:text="@string/drawings_picture"
                        android:textColor="@color/colorCircleBlue"
                        android:textSize="14dp"/>

                    <RelativeLayout
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:background="@drawable/circle_black"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="@string/drawings_input"
                        android:textColor="@color/colorCircleBlack"
                        android:textSize="14dp"/>

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/layout_scale"
                    android:layout_width="207dp"
                    android:layout_height="207dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/bg_zoom_scale"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/txt_scale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="x2ë°°"
                        android:textColor="@color/colorWhite"
                        android:textSize="40dp"/>

                </RelativeLayout>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/layout_table"
                android:layout_width="313dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite">

                    <TextView
                        android:id="@+id/btn_select"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:text="@string/select"
                        android:textColor="@color/colorBlack"
                        android:textSize="14dp"
                        android:onClick="onClick"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:text="@string/table_title"
                        android:textColor="@color/colorBlack"
                        android:textSize="14dp"/>

                    <TextView
                        android:id="@+id/btn_delete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:text="@string/delete"
                        android:textColor="@color/colorBlack"
                        android:textSize="14dp"
                        android:onClick="onClick"
                        android:visibility="gone"/>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/border_square_pink_box">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="17dp"
                        android:layout_marginBottom="17dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="@string/table_column1"
                            android:textColor="@color/colorTextPrimary"
                            android:textSize="12dp"/>

                    </RelativeLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/colorTableLineGray"/>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:layout_marginTop="17dp"
                        android:layout_marginBottom="17dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="@string/table_column2"
                            android:textColor="@color/colorTextPrimary"
                            android:textSize="12dp"/>

                    </RelativeLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/colorTableLineGray"/>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:layout_marginTop="17dp"
                        android:layout_marginBottom="17dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="@string/table_column3"
                            android:textColor="@color/colorTextPrimary"
                            android:textSize="12dp"/>

                    </RelativeLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/colorTableLineGray"/>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:layout_marginTop="17dp"
                        android:layout_marginBottom="17dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="@string/table_column4"
                            android:textColor="@color/colorTextPrimary"
                            android:textSize="12dp"/>

                    </RelativeLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/colorTableLineGray"/>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="17dp"
                        android:layout_marginBottom="17dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="@string/table_column5"
                            android:textColor="@color/colorTextPrimary"
                            android:textSize="12dp"/>

                    </RelativeLayout>

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </androidx.recyclerview.widget.RecyclerView>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</layout>