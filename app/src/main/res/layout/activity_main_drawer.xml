<?xml version="1.0" encoding="utf-8"?>

<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    tools:openDrawer="start">

    <include
        layout="@layout/activity_main_contents"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nv_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:background="@color/lightKeyColor">

                <TextView
                    android:id="@+id/txt_project_name"
                    android:layout_width="wrap_content"
                    android:layout_height="89dp"
                    android:layout_marginStart="26dp"
                    android:gravity="center"
                    android:text="서초구청"
                    android:textSize="24dp"
                    android:textColor="@color/textGrayColor"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/textGrayColor"/>

                <RelativeLayout
                    android:id="@+id/grade_layout"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:paddingStart="27dp"
                    android:paddingEnd="27dp"
                    android:background="@color/pinkBackgroundColor">
                    <TextView
                        android:id="@+id/txt_grade_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true"
                        android:text="@string/side_menu_grade"
                        android:textSize="20dp"
                        android:textColor="@color/lightKeyColor"/>
                    <TextView
                        android:id="@+id/txt_grade"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:textSize="16dp"
                        android:textColor="@color/pinkBackgroundColor"
                        android:visibility="gone"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/textGrayColor"/>

                <RelativeLayout
                    android:id="@+id/facility_layout"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:paddingStart="27dp"
                    android:paddingEnd="27dp"
                    android:background="@color/lightKeyColor">
                    <TextView
                        android:id="@+id/txt_facility_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/side_menu_facility"
                        android:textSize="20dp"
                        android:textColor="@color/whiteColor"/>
                    <TextView
                        android:id="@+id/txt_facility"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:textSize="16dp"
                        android:textColor="@color/pinkBackgroundColor"
                        android:visibility="gone"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/textGrayColor"/>

                <RelativeLayout
                    android:id="@+id/facility_category_layout"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:paddingStart="27dp"
                    android:paddingEnd="27dp"
                    android:background="@color/lightKeyColor">
                    <TextView
                        android:id="@+id/txt_facility_category_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/side_menu_facility_category"
                        android:textSize="20dp"
                        android:textColor="@color/whiteColor"/>
                    <TextView
                        android:id="@+id/txt_facility_category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:textSize="16dp"
                        android:textColor="@color/pinkBackgroundColor"
                        android:visibility="gone"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/textGrayColor"/>

                <RelativeLayout
                    android:id="@+id/architecture_layout"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:paddingStart="27dp"
                    android:paddingEnd="27dp"
                    android:background="@color/lightKeyColor">
                    <TextView
                        android:id="@+id/txt_architecture_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/side_menu_architecture"
                        android:textSize="20dp"
                        android:textColor="@color/whiteColor"/>
                    <TextView
                        android:id="@+id/txt_architecture"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:textSize="16dp"
                        android:textColor="@color/pinkBackgroundColor"
                        android:visibility="gone"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/textGrayColor"/>

                <RelativeLayout
                    android:id="@+id/research_layout"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:paddingStart="27dp"
                    android:paddingEnd="27dp"
                    android:background="@color/lightKeyColor">
                    <TextView
                        android:id="@+id/txt_research_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/side_menu_research_category"
                        android:textSize="20dp"
                        android:textColor="@color/whiteColor"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/textGrayColor"/>
                
                <Button
                    android:id="@+id/btn_input_research"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="22.5dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:text="조사 입력하기"
                    android:textSize="18dp"
                    android:textColor="@color/lightKeyColor"
                    android:textStyle="bold"
                    android:background="@drawable/btn_round_light_pink"/>

            </LinearLayout>

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/textGrayColor"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1.5"
                android:background="@color/pinkBackgroundColor">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="89dp"
                    android:paddingStart="48dp"
                    android:paddingEnd="34dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true"
                        android:text="@string/side_menu_please_select"
                        android:textSize="24dp"
                        android:textColor="@color/textGrayColor"/>
                    <ImageButton
                        android:id="@+id/ib_next"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:background="@null"
                        android:src="@drawable/next" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/borderPinkColor"/>
                
                <LinearLayout
                    android:id="@+id/grade_content_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="visible">
                    <RelativeLayout
                        android:id="@+id/detail_safe_check_layout"
                        android:layout_width="match_parent"
                        android:layout_height="80dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="59dp"
                            android:text="@string/side_menu_detail_safe_check"
                            android:textSize="18dp"
                            android:textColor="@color/lightKeyColor"/>
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/borderPinkColor"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:orientation="vertical"
                            android:layout_centerInParent="true"
                            android:layout_marginStart="34dp"
                            android:layout_marginEnd="34dp"
                            android:background="@drawable/border_square_gray_box">
                            <EditText
                                android:id="@+id/edt_grade_self"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@null"
                                android:hint="@string/side_menu_hint_self"
                                android:textColorHint="@color/menuHintColor"
                                android:textSize="18dp"
                                android:paddingStart="20dp"
                                android:paddingEnd="20dp"
                                android:maxLines="1"/>
                        </LinearLayout>
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/borderPinkColor"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/facility_content_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_facility"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">
                    </androidx.recyclerview.widget.RecyclerView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:orientation="vertical"
                        android:layout_marginTop="25dp"
                        android:layout_marginBottom="27dp"
                        android:layout_marginStart="34dp"
                        android:layout_marginEnd="34dp"
                        android:background="@drawable/border_square_gray_box">
                        <EditText
                            android:id="@+id/edt_facility_self"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:hint="@string/side_menu_hint_self"
                            android:textColorHint="@color/menuHintColor"
                            android:textSize="18dp"
                            android:paddingStart="20dp"
                            android:paddingEnd="20dp"
                            android:maxLines="1"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/facility_category_content_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_facility_category"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">
                    </androidx.recyclerview.widget.RecyclerView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:orientation="vertical"
                        android:layout_marginTop="25dp"
                        android:layout_marginBottom="27dp"
                        android:layout_marginStart="34dp"
                        android:layout_marginEnd="34dp"
                        android:background="@drawable/border_square_gray_box">
                        <EditText
                            android:id="@+id/edt_facility_catogory_self"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:hint="@string/side_menu_hint_self"
                            android:textColorHint="@color/menuHintColor"
                            android:textSize="18dp"
                            android:paddingStart="20dp"
                            android:paddingEnd="20dp"
                            android:maxLines="1"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/architecture_content_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_architecture"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">
                    </androidx.recyclerview.widget.RecyclerView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:orientation="vertical"
                        android:layout_marginTop="25dp"
                        android:layout_marginBottom="27dp"
                        android:layout_marginStart="34dp"
                        android:layout_marginEnd="34dp"
                        android:background="@drawable/border_square_gray_box">
                        <EditText
                            android:id="@+id/edt_architecture_self"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:hint="@string/side_menu_hint_self"
                            android:textColorHint="@color/menuHintColor"
                            android:textSize="18dp"
                            android:paddingStart="20dp"
                            android:paddingEnd="20dp"
                            android:maxLines="1"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/research_content_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_research"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">
                    </androidx.recyclerview.widget.RecyclerView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:orientation="vertical"
                        android:layout_marginTop="25dp"
                        android:layout_marginBottom="27dp"
                        android:layout_marginStart="34dp"
                        android:layout_marginEnd="34dp"
                        android:background="@drawable/border_square_gray_box">
                        <EditText
                            android:id="@+id/edt_research_self"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:hint="@string/side_menu_hint_self"
                            android:textColorHint="@color/menuHintColor"
                            android:textSize="18dp"
                            android:paddingStart="20dp"
                            android:paddingEnd="20dp"
                            android:maxLines="1"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>