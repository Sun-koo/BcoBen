<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/layout_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:paddingStart="33dp"
        android:paddingEnd="33dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edit_project_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="28dp"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            android:background="@drawable/border_square_gray_box"
            android:maxLines="1"
            android:inputType="text"
            android:hint="@string/side_menu_hint_input_project_name"
            android:textColorHint="@color/colorHintGray"
            android:textSize="19dp"
            android:textColor="@color/colorTextPrimary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="@string/side_menu_project_start_date"
                    android:textColor="@color/colorTextLabel"
                    android:textSize="19dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/edit_project_start_date"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:paddingStart="14dp"
                        android:paddingEnd="14dp"
                        android:background="@drawable/border_square_gray_box"
                        android:maxLines="1"
                        android:editable="false"
                        android:hint="@string/side_menu_hint_project_date"
                        android:textColorHint="@color/colorHintGray"
                        android:textSize="19dp"
                        android:textColor="@color/colorTextPrimary" />

                    <RelativeLayout
                        android:id="@+id/layout_project_start_date"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:onClick="onDrawerProjectMenuClick"/>

                </RelativeLayout>

            </LinearLayout>

            <Space
                android:layout_width="39dp"
                android:layout_height="match_parent"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="@string/side_menu_project_end_date"
                    android:textColor="@color/colorTextLabel"
                    android:textSize="19dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/edit_project_end_date"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:paddingStart="14dp"
                        android:paddingEnd="14dp"
                        android:background="@drawable/border_square_gray_box"
                        android:maxLines="1"
                        android:editable="false"
                        android:hint="@string/side_menu_hint_project_date"
                        android:textColorHint="@color/colorHintGray"
                        android:textSize="19dp"
                        android:textColor="@color/colorTextPrimary" />

                    <RelativeLayout
                        android:id="@+id/layout_project_end_date"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:onClick="onDrawerProjectMenuClick"/>

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</layout>