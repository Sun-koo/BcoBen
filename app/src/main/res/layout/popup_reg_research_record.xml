<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_record"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="14dp"
            android:text="@string/popup_reg_research_recode_click"
            android:textColor="@color/colorWhite"
            android:textSize="13dp"
            android:background="@drawable/background_keycolor_popup_menu"
            android:onClick="onClick"/>
        
        <LinearLayout
            android:id="@+id/layout_recording"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/background_keycolor_popup_menu"
            android:visibility="gone">
            
            <TextView
                android:id="@+id/txt_recording_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:text="11 음성녹음 - 1(자동완성)"
                android:textColor="@color/colorWhite"
                android:textSize="13dp"/>

            <TextView
                android:id="@+id/txt_recording_timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:layout_marginBottom="14dp"
                android:text="00:00"
                android:textColor="@color/colorWhite"
                android:textSize="24dp"/>
            
            <Button
                android:id="@+id/btn_record_stop"
                android:layout_width="143dp"
                android:layout_height="36dp"
                android:layout_marginBottom="11dp"
                android:text="@string/popup_reg_research_recode_stop"
                android:textColor="@color/colorTextPrimary"
                android:textSize="16dp"
                android:background="@drawable/btn_round_pink"
                android:onClick="onClick"/>
            
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_record"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:id="@+id/layout_record_play"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/background_keycolor_popup_menu"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_recode_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="11 음성녹음 - 1(자동완성)"
                    android:textColor="@color/colorWhite"
                    android:textSize="13dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="4dp"
                    android:padding="14dp"
                    android:text="@string/delete"
                    android:textColor="@color/colorWhite"
                    android:textSize="13dp"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                android:paddingStart="9dp"
                android:paddingEnd="9dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_recode_current_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:01"
                    android:textColor="@color/colorWhite"
                    android:textSize="13dp"/>

                <androidx.appcompat.widget.AppCompatSeekBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp">
                </androidx.appcompat.widget.AppCompatSeekBar>

                <TextView
                    android:id="@+id/txt_recode_total_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:01"
                    android:textColor="@color/colorWhite"
                    android:textSize="13dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="11dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_backwards"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="@string/popup_reg_research_recode_backwards"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="16dp"
                    android:background="@drawable/btn_round_pink"/>

                <Button
                    android:id="@+id/btn_stop"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="6dp"
                    android:text="@string/popup_reg_research_recode_stop"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="16dp"
                    android:background="@drawable/btn_round_pink"/>

                <Button
                    android:id="@+id/btn_forward"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="@string/popup_reg_research_recode_forward"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="16dp"
                    android:background="@drawable/btn_round_pink"/>

            </LinearLayout>

        </LinearLayout>
        
    </LinearLayout>
    
</layout>